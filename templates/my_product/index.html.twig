{% extends 'base.html.twig' %}

{% block title %}Mes Produits
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-between align-items-center mb-4">
		<h1>Mes Produits</h1>
		<a href="{{ path('app_my_product_new') }}" class="btn btn-success">Créer un produit</a>
	</div>

	<div class="row">
		{% for produit in produits %}
			<div class="col-md-4 mb-3">
				<div class="card">
					<div class="card-body">
						<h5 class="card-title">{{ produit.nom }}</h5>
						<p class="card-text">{{ produit.description|slice(0, 100) }}...</p>
						<p class="card-text">
							<strong>Prix:</strong>
							{{ produit.prix }}
							points<br>
							<strong>Catégorie:</strong>
							{{ produit.category }}
						</p>
						<div class="btn-group" role="group">
							<a href="{{ path('app_my_product_edit', {id: produit.id}) }}" class="btn btn-sm btn-primary">Modifier</a>
							<form method="post" action="{{ path('app_my_product_delete', {id: produit.id}) }}" style="display: inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?')">
								<button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
							</form>
						</div>
					</div>
				</div>
			</div>
		{% else %}
			<p>Vous n'avez créé aucun produit.</p>
		{% endfor %}
	</div>
{% endblock %}
